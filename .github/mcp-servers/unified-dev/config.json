{
  "models": {
    "primary": "claude",
    "fallback": ["codex", "custom"],
    "claude": {
      "model": "claude-3-5-sonnet-20241022",
      "max_tokens": 4096,
      "temperature": 0.7,
      "description": "Anthropic Claude 3.5 Sonnet - Primary model with subscription"
    },
    "codex": {
      "model": "gpt-4",
      "max_tokens": 4096,
      "temperature": 0.7,
      "check_credits": true,
      "description": "OpenAI GPT-4 - Use when credits available"
    },
    "custom": {
      "provider": "openrouter",
      "model": "anthropic/claude-3.5-sonnet",
      "api_url": "https://openrouter.ai/api/v1",
      "max_tokens": 4096,
      "temperature": 0.7,
      "description": "Custom provider via OpenRouter or local models"
    }
  },
  "rag": {
    "n_results_default": 5,
    "vector_provider": "chroma",
    "enable_hybrid_search": true,
    "audio_boost_weight": 0.2,
    "description": "RAG code search configuration"
  },
  "memory": {
    "mode": "local",
    "enable_context_enhancement": true,
    "session_ttl_days": 30,
    "description": "Mem0 persistent memory configuration"
  },
  "server": {
    "transport": "stdio",
    "log_level": "INFO",
    "max_buffer_size": 10485760,
    "timeout_seconds": 300,
    "description": "MCP server configuration"
  }
}
