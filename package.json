{
  "name": "icda-prototype",
  "version": "0.6.0",
  "private": true,
  "description": "Intelligent Customer Data Access - Full Stack Prototype",
  "scripts": {
    "dev": "concurrently --kill-others -n backend,frontend -c cyan,magenta \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:all": "concurrently --kill-others -n backend,frontend -c cyan,magenta \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "npm run dev --prefix frontend",
    "build": "npm run build --prefix frontend",
    "lint": "npm run lint --prefix frontend",
    "start": "python -m uvicorn main:app --host 0.0.0.0 --port 8000"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
